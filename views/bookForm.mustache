{{> header }}

<h1>Редагувати книгу</h1>

<form action="/books/edit/{{book._id}}" method="POST">
  <input type="text" name="title" value="{{book.title}}" required><br>
  <textarea name="description" required>{{book.description}}</textarea><br>
  <input type="text" name="coverImage" value="{{book.coverImage}}"><br>
  <input type="text" name="author" value="{{book.author}}"><br>
  <button type="submit">Зберегти зміни</button>
</form>

<a href="/books">← Назад до списку</a>

{{> footer }}
